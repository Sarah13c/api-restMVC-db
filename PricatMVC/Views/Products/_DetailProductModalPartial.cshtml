@model Products

<div class="modal" tabindex="-1" id="detailProduct">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailProductLabel">
                    @Html.DisplayNameFor(model => model.Name)
                    @Html.DisplayFor(model => model.Name)
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span>x</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label asp-for="Id">@Model.Id></label>
                        @Html.DisplayNameFor(model => model.ImageName)
                    </div>
                    <div class="form-group">
                        <label asp-for="Name">@Model.Name></label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">@Model.Description></label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">@Model.Price></label>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>
